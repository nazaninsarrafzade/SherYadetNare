<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/img"
    >

    <RelativeLayout
        android:id="@+id/topMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/scorebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/coin"
            android:padding="7dp"
            android:textSize="25dp" />


        <ImageButton
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:onClick="helpMe"
            android:src="@drawable/helpp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topMenu"
        android:id="@+id/seekbarFrame"
        android:layout_marginTop="20dp">
        <SeekBar
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/seekbar"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/text_view_score"
            android:text="00:15"
            android:textColor="@android:color/holo_green_light"
            android:textSize="40sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musicbuttons"
        android:layout_below="@+id/seekbarFrame"
        android:layout_marginLeft="70dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play"
            android:text="play"
            android:background="@drawable/circle_button"
            android:src="@drawable/play"
            android:onClick="Play"
            android:layout_marginRight="10dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop"
            android:src="@drawable/pause"
            android:id="@+id/pause"
            android:background="@drawable/circle_button"
            android:onClick="Pause"
            android:layout_marginRight="10dp"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="res"
            android:id="@+id/reset"
            android:background="@drawable/circle_button"
            android:onClick="Reset"
            android:src="@drawable/replay"
            />


    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beforeGame"
        android:layout_below="@+id/musicbuttons"
        android:layout_marginLeft="160dp"
        android:textSize="100dp"
        android:textColor="#FFFF00"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/correctAnswer"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/musicbuttons"
        android:gravity="center"
        android:layout_gravity="right"
        />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:columnWidth="90dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/correctAnswer" />




</RelativeLayout>
